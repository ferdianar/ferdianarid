{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "@pages/*": [
        "pages/*"
      ],
      "@data/*": [
        "apps/data/*"
      ],
      "@firebase/*": [
        "firebase/*"
      ],
      "@locales/*": [
        "locales/*"
      ],
      "@animation/*": [
        "apps/animation/*"
      ],
      "@components/*": [
        "apps/components/*"
      ],
      "@modules/*": [
        "apps/modules/*"
      ],
      "@specs/*": [
        "apps/specs/*"
      ],
      "@styles/*": [
        "apps/styles/*"
      ],
      "@layouts/*": [
        "apps/layouts/*"
      ],
      "@hooks/*": [
        "apps/hooks/*"
      ],
      "@interfaces/*": [
        "apps/interfaces/*"
      ]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "apps/components/atoms/Button/Switcher.jsx", "apps/specs/unit/home.test.js", "apps/specs/unit/feedback.test.jsx", "apps/specs/unit/feedback.test.jsx", "pages/test.jsx"],
  "exclude": ["node_modules"]
}